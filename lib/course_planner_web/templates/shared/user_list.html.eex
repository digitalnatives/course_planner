
  <div class="row">
    <%= if length(@users) > 0 do %>
      <%= for user <- @users do %>
        <div class="col-xs-4 col-sm-3 col-md-3 col-lg-2">
          <%= CoursePlannerWeb.SharedView.user_bubble user, @clickable %>
        </div>
      <% end %>
    <% else %>
      <div class="col-xs-12 user-list__empty-text">
        <%= @empty_text %>
      </div>
    <% end %>
  </div>
